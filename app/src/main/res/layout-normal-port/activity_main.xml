<?xml version="2.0.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:progress="80"
        android:progressDrawable="@drawable/circle"
        tools:targetApi="24" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="00:00:00"
        android:textColor="@android:color/black"
        android:textSize="54sp" />

    <TextView
        android:id="@+id/millis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_countdown"
        android:layout_alignEnd="@+id/text_view_countdown"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="10dp"
        android:text="000"
        android:textSize="25dp"/>

    <!--<Button-->
    <!--android:id="@+id/button_start_pause"-->
    <!--android:layout_width="75dp"-->
    <!--android:layout_height="70dp"-->
    <!--android:background="@drawable/pauseicon"-->
    <!--android:layout_below="@+id/progressBar"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:text="" />-->

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/playicon"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:text="" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/reseticon"
        android:layout_below="@+id/progressBar"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/button_start_pause"
        android:text=""
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/setTimer"
        android:layout_width="210dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        tools:visibility="invisible"/>

    <EditText
    android:id="@+id/timerName"
    android:layout_width="250dp"
    android:layout_height="50dp"
    android:layout_above="@+id/progressBar"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="62dp"
    android:hint="@string/enter_timer_name_optional"
    android:text="" />

</RelativeLayout>